#!/usr/bin/env ruby
require File.expand_path('../../lib/spelleken_van_mit', __FILE__)

#                             resX resY fullscreen fps
$window = SVM::GameWindow.new(905, 600, false,     30.to_fps)
begin
  SVM.configure do |c|
    # Print debug messages?
    c.debug = ARGV.include?('--debug')

    # General sound volume. 0.0 -> 1.0
    c.sound_volume = 0.25

    # Background music volume. 0.0 -> 1.0
    c.background_volume = 0.025
    c.background_music  = true

    # Which font to use in UI
    c.font_name       = 'Helvetica Neue'
    c.small_font_name = 'Helvetica Neue'

    # Text colors
    c.text_color       = 0xffeeeeee
    c.small_text_color = 0xffcccccc

    # Draw UI at all?
    c.ui_enabled = true
  end

  $stdout.puts "Welkom bij het Spelleken van mit v#{SVM.version}. Enjoy!"
  $window.bootstrap
  $window.show
rescue Interrupt
  $stderr.puts "\nQuitting..."
  exit 1
ensure
  $window.close
  $stdout.puts String::EOL
end
