#!/usr/bin/env ruby
require_relative '../lib/spelleken_van_mit'

#                         resX resY fullscreen fps
$window = SVM::Window.new(905, 600, false,     SVM::Config['fps'].to_fps)
begin
  $window.bootstrap
  $window.show
rescue Interrupt
  $stderr.puts String::EOL + 'Quitting...'
  exit 1
ensure
  $window.close
  $stdout.puts String::EOL
end
