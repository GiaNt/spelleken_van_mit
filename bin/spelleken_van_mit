#!/usr/bin/env ruby
require File.expand_path('../../lib/spelleken_van_mit',     __FILE__)
require File.expand_path('../../lib/spelleken_van_mit/cli', __FILE__)

begin
  SpellekenVanMit::CLI.start!
rescue SpellekenVanMit::SpellekenVanMitError => e
  puts e.message
  puts e.backtrace.join("\n")
  exit e.status_code
rescue Interrupt => e
  puts "\nQuitting..."
  puts e.backtrace.join("\n")
  exit 1
end
