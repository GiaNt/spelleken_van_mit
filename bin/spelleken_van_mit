#!/usr/bin/env ruby
require_relative '../lib/spelleken_van_mit'

begin
  $stdout.puts "Welkom bij het #{SVM::Window::CAPTION} v#{SVM::VERSION}. Enjoy!"
  window = SVM::Window.bootstrap
  window.show
rescue Interrupt
  $stderr.puts String::EOL + 'Quitting...'
rescue SVM::Error => e
  $stderr.puts e.message
ensure
  window.close
  $stdout.puts String::EOL
end
